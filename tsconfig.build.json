{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "es2019",
      "es2020",
      "esnext"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "rootDir": "src",
    "outDir": "lib",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2019",
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
    }
  },
  "exclude": [
    "tmp",
    "__mocks__",
    "**/*.spec.ts",
    "scripts"
  ]
}
