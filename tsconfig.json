{
  "compilerOptions": {
    "experimentalDecorators": true,
    "incremental": true,
    "lib": [
      "DOM",
      "esnext"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "rootDir": "src",
    "outDir": "lib",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2019",
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "tmp"
  ]
}
